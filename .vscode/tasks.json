{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "gcc",
        "args": [
          "-g",  // Include debugging symbols
          "${workspaceFolder}/HW2/*.c",  // Path to your C source files
          "-o",
          "${workspaceFolder}/HW2/HW2.exe"  // Output executable
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Task generated by VS Code to compile C code."
      }
    ]
  }
  